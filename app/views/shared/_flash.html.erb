<% flash.each do |key, message| %>
  <%# Map Rails flash types to Bootstrap classes %>
  <% alert_class = case key.to_s %>
  <% when 'notice', 'success' %>
    <% 'alert-success' %>
  <% when 'alert', 'error', 'danger' %>
    <% 'alert-danger' %>
  <% when 'warning' %>
    <% 'alert-warning' %>
  <% else %>
    <% 'alert-info' %>
  <% end %>
  <div class="alert <%= alert_class %> alert-dismissible fade show my-3" role="alert">
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
