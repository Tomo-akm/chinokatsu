<% content_for :title, "投稿一覧" %>

<div class="container">
  <div class="text-center mb-4">
    <h1 class="display-4 fw-bold text-primary">投稿一覧</h1>
  </div>

  <div class="text-center mb-4">
    <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
  </div>

  <div class="d-flex flex-column gap-3" id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @posts %>
  </div>
</div>
