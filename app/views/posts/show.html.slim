.container
  .row.justify-content-center
    .col-lg-8
      .card.shadow-sm.bg-white.text-dark
        .card-body.p-4
          .d-flex.justify-content-between.align-items-center.mb-2
            h2.h5.mb-0 commit詳細
            span.text-muted.small
              i.bi.bi-clock
              |  #{@post.created_at.strftime("%Y/%m/%d %H:%M")}
          hr.my-3
          p.card-text.fs-5.lh-base.mb-4 = simple_format(h(@post.content))
          hr.my-3
          .d-flex.flex-wrap.gap-2.justify-content-center
            = link_to "commit logへ", posts_path, class: "btn btn-secondary"
            - if user_signed_in? && @post.user == current_user
              = link_to "rebase", edit_post_path(@post), class: "btn btn-primary"
              = button_to "revert", @post, method: :delete, class: "btn btn-danger", data: { confirm: "本当にrevertしますか？" }