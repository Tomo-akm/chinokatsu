<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm bg-white text-dark">
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="h5 mb-0">commit詳細</h2>
            <span class="text-muted small"><i class="bi bi-clock"></i> <%= @post.created_at.strftime("%Y/%m/%d %H:%M") %></span>
          </div>
          <hr class="my-3">
          <p class="card-text fs-5 lh-base mb-4"><%= simple_format(h(@post.content)) %></p>
          <hr class="my-3">
          <div class="d-flex flex-wrap gap-2 justify-content-center">
            <%= link_to "commit logへ", posts_path, class: "btn btn-secondary" %>
            <% if user_signed_in? && @post.user == current_user %>
              <%= link_to "rebase", edit_post_path(@post), class: "btn btn-primary" %>
              <%= button_to "revert", @post, method: :delete, class: "btn btn-danger", data: { confirm: "本当にrevertしますか？" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
